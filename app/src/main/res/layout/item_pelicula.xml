<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/placeholder_image"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la película"
        android:autoLink="web"
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/textViewResena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reseña de la película"
        android:layout_below="@id/textViewNombre"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/textViewFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de lanzamiento"
        android:layout_below="@id/textViewResena"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:gravity="center" />
    <TextView
        android:id="@+id/textViewCalificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calificacion"
        android:layout_below="@id/textViewFecha"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:gravity="center" />
</RelativeLayout>
